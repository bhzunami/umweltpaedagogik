%article#main
  %h1 Littering im Waldkurs
  - category = "littering_im_waldkurs"
  - @littering_im_waldkurs.in_groups_of(4, false) do |image_line|
    .row.row-content.buffer
      - image_line.each do |image|
        .image-box.column
          %a.fancybox{href: image_path(get_original(image, category)), rel: "gallery", title: ""}
            = image_tag(get_image_path(image, category))
  
  .clear
